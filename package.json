{
  "name": "d-dca_contracts",
  "version": "0.0.1",
  "description": "contracts to perform onChain DCA trades",
  "main": "index.js",
  "scripts": {
    "solhint": "./node_modules/.bin/solhint -f table contracts/**/*.sol",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "hardhat": "npx hardhat node",
    "dev": "npx hardhat deployContracts --network hardhat",
    "deploy-baseGoerli": "npx hardhat deployContracts --network base-goerli",
    "deploy-opGoerli": "npx hardhat deployContracts --network opGoerli",
    "deploy-mumbai": "npx hardhat deployContracts --network mumbai",
    "deploy-arbGoerli": "npx hardhat deployContracts --network arbGoerli",
    "deploy-sepolia": "npx hardhat deployContracts --network sepolia",
    "deploy-ethGoerli": "npx hardhat deployContracts --network ethGoerli",
    "deploy-local": "npx hardhat deployContracts --network localhost"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/E-Labs-io/D-DCA.git"
  },
  "keywords": [
    "web3",
    "defi",
    "dca",
    "ethereum",
    "dex"
  ],
  "author": "e_labs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/E-Labs-io/D-DCA/issues"
  },
  "homepage": "https://github.com/E-Labs-io/D-DCA#readme",
  "devDependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^20.8.9",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.4",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "hardhat": "^2.18.3",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.9",
    "keccak256": "^1.0.6",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.5",
    "tsconfig-paths": "^4.2.0"
  },
